{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],

    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,

    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/"],
  "exclude": ["node_modules"],
}
